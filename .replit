entrypoint = "main.cs"

hidden = ["bin", "obj"]
modules = ["dotnet-7.0", "nodejs-20", "dotnet-8.0"]

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"
DOTNET_CLI_HOME = "$XDG_CACHE_HOME"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["dotnet", "run"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "POSTA C# API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Frontend Server"

[[workflows.workflow]]
name = "POSTA C# API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/POSTA.Api && ASPNETCORE_ENVIRONMENT=Development dotnet run --urls=\"http://0.0.0.0:3000\""
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Angular Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33427
externalPort = 3003

[[ports]]
localPort = 42785
externalPort = 3001

[[ports]]
localPort = 44637
externalPort = 3002

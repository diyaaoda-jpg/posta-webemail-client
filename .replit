entrypoint = "main.cs"

hidden = ["bin", "obj"]
modules = ["dotnet-7.0", "nodejs-20", "dotnet-8.0"]

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"
DOTNET_CLI_HOME = "$XDG_CACHE_HOME"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd src/POSTA.Api && dotnet run"]
deploymentTarget = "autoscale"
build = ["sh", "-c", "cd src/POSTA.Api && dotnet build"]

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "POSTA C# API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Frontend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "POSTA Proxy Server"

[[workflows.workflow]]
name = "POSTA C# API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/POSTA.Api && ASPNETCORE_ENVIRONMENT=Development dotnet run --urls=\"http://0.0.0.0:3000\""
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Angular Frontend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start -- --host 0.0.0.0 --port 5173"
waitForPort = 5173

[[workflows.workflow]]
name = "POSTA Proxy Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node proxy-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 41087
externalPort = 3001
